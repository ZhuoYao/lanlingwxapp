/* pages/chooseschool/chooseschool.wxss */
page{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.chooseschool{
  width: 100%;
  height: 100%;
}
.searchtop{
  padding:0rpx 45rpx;
  height: 300rpx;

}
.searchtop .search{
  padding: 14rpx 0 32rpx 0;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
}
.searchtop .search >view:first-child{
  width: 550rpx;
  height: 60rpx;
  background-color: #F2F2F2;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #CCCCCC;
  overflow: hidden;
  display: flex;
}
.searchtop .search >view >image{
   width: 34rpx;
   height: 34rpx;
   margin-top: 14rpx;
   margin-left: 26rpx;
   margin-right: 15rpx;
}
.searchtop .search >view >input{
  line-height: 70rpx;
  height: 60rpx;
  flex: 1;
}
.searchtop .search >view:last-child{
  font-size: 28rpx;
  color: #666666;
  margin-left: 51rpx;
}
.searchtop .searchdown{
   width: 100%;
   height: 290rpx;
   overflow: hidden;
}
.searchtop .searchdown .searchtext{
   font-size: 28rpx;
}
.searchtop .searchdown .searchhot{
    font-size: 28rpx;
    overflow: hidden;
}
.searchtop .searchdown .searchhot >view{
  height: 56rpx;
  border: 2rpx solid #358AFF;
  border-radius: 30rpx;
  padding: 0 52rpx;
  display: block;
  float: left;
  line-height: 60rpx;
  margin-top: 16rpx;
}
.searchtop .searchdown .searchhot >view:nth-child(2){
  margin-left: 30rpx;
}