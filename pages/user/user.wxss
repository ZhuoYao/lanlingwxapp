/* pages/user/user.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #F5F5F5;
}
.user{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.user .user-icon{
  width: 680rpx;
  margin: 0 auto;
  margin-top: 17rpx;
  background-color: white;
  box-shadow:0px 2px 9px 0px rgba(167,167,167,0.45);
  border-radius: 10rpx;
  height: 266rpx;
  overflow: hidden;
}
.user .user-icon >view{
  padding:  76rpx 38rpx 76rpx 55rpx; 
  display: flex;
  justify-content: space-between;
}
.user .user-icon >view >image:nth-child(1){
    width: 114rpx;
    height: 114rpx;
}
.user .user-icon >view > view{
  flex: 1;
  padding-left: 33rpx;
  overflow: hidden;
}
.user .user-icon >view > view > view:first-child{
    font-size: 28rpx;
    color: black;
    font-weight: bold;
    margin-top: 10rpx;
}
.user .user-icon >view > view > view:last-child{
    font-size: 22rpx;
    color: #BFBFBF;
    font-weight: bold;
    margin-top: 23rpx;
}
.user .user-icon >view >image:nth-child(3){
  width: 30rpx;
  margin-top: 40rpx;
}
.user .user-school{
  width: 680rpx;
  height: 88rpx;
  margin: 0 auto;
  margin-top: 18rpx;
  background-color: white;
  box-shadow:0px 2px 9px 0px rgba(167,167,167,0.45);
  border-radius: 10rpx;
  line-height: 88rpx;
  display: flex;
  overflow: hidden;
}
.user .user-school > image{
    width: 32rpx;
    margin-top: 25rpx;
    margin-left: 42rpx;
}
.user .user-school >view:nth-child(2){
    font-size: 30rpx;
    padding-left: 18rpx;
}
.user .user-school >view:nth-child(3){
  flex: 1;
  display: flex;
  overflow: hidden;
}
.user .user-school >view:nth-child(3) > view:nth-child(1){
    font-size: 24rpx;
    color: #666666;
    text-align: right;
    flex: 1;
}
.user .user-school >view:nth-child(3) > .sign1{
    flex: 1;
    text-align: right;
    margin-right: 46rpx;
    font-size: 22rpx;
    color: #999999;
}
.user .user-school >view:nth-child(3) > view:nth-child(2){
    color: #358AFF;
    font-size: 24rpx;
    padding-right: 20rpx;
}
.user .user-school >view:nth-child(3) > view:nth-child(3){
  width: 32rpx;
  margin-right:36rpx;
}
.user .user-school >view:nth-child(3) > view:nth-child(3) > image{
  width:32rpx;
  margin-top:25rpx;
}
.user .user-school >view:nth-child(3) .sign{
  margin-right: 20rpx;
  width: 110rpx;
  height: 46rpx;
  text-align: center;
  color: white !important;
  background-color:#43E0FF;
  font-size: 18rpx !important;
  border-radius: 23rpx;
  margin-top: 25rpx;
  line-height: 46rpx;
  padding-right: 0rpx !important;
}
.user .user-other{
  width: 680rpx;
  height: 352rpx;
  margin: 0 auto;
  margin-top: 18rpx;
  background-color: white;
  box-shadow:0px 4px 16px 0px rgba(167,167,167,0.33);
  border-radius: 10rpx;
  overflow: hidden;
}
.user .user-other > view >button{
  background-color: white;
  padding: 0rpx;
  display: flex;
  width: 100%;
  text-align: left;
}
.user .user-other > view >button::after{
  border: none;
}
.user .user-other >view{
    width: 664rpx;
    margin-left: 16rpx;
    height: 86rpx;
    border-bottom: 2rpx solid #F5F5F5;
    display: flex;
    justify-content: space-between;
    line-height: 86rpx;
    overflow: hidden;
}
.user .user-other >view >image:nth-child(1), .user .user-other >view > button >image:nth-child(1){
    width: 32rpx;
    margin-left: 27rpx;
    margin-top: 25rpx;
}
.user .user-other >view >view, .user .user-other >view > button >view{
  flex: 1;
  font-size: 30rpx;
  padding-left: 18rpx;
}
.user .user-other >view >image:nth-child(3), .user .user-other >view >button >image:nth-child(3){
  width: 32rpx;
  margin-right: 36rpx;
  margin-top: 30rpx;
}