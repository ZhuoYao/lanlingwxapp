/* pages/index1/main.wxss */
.index-main{
  width: 100%;
  height: auto;
}
swiper-item .slide-image{
  width: 100%;
  height: 330rpx;
}
.category{
  width: 100%;
  height: 82rpx;
  display: flex;
}
.category > view{
    width: 33.33%;
    height: 100%;
    text-align: center;
    line-height: 82rpx;
    font-size: 28rpx;
}
.category > view > .categoryactive{
  margin: 0 auto;
  top: -3rpx;
  position: relative;
  width: 76rpx;
  height: 3rpx;
  background-color: #358AFF;
}
.cgactive{
  color: #358AFF;
}
.subject{
    width: 100%;
    height: 83rpx;
    font-size: 26rpx;
    border-bottom: 1rpx solid #F0F2F5;
    line-height: 83rpx;
    display: flex;
}
.subject > view:nth-child(1){
    width: 150rpx;
    overflow: hidden;

}
.subject > view:nth-child(1) > image{
  width: 30rpx;
  margin-left: 45rpx;
  position: relative;
  top: 5rpx;
}
.subject > view:nth-child(2){
  flex: 1;
  display: block;
}
.subject > view:nth-child(2) > text{
  display: block;
  width: calc(100% - 80rpx);
  float: left;
  text-align: right;
}
.subject > view:nth-child(2) >  view{
  width: 50rpx;
  float: left;
}
.subject > view:nth-child(2) >  view > image{
  width: 10px;
  margin-left: 30rpx;
}
.choosetype{
  padding: 38rpx 63rpx 0rpx 63rpx;
  display: flex;
}
.choosetype1{
  padding: 30rpx 63rpx 47rpx 63rpx;
  display: flex;
}
.choosetype > view:nth-child(1), .choosetype1 > view:nth-child(1){
  flex: 1;
}
.choosetype > view:nth-child(1) > image , .choosetype > view:nth-child(3) > image , .choosetype1 > view:nth-child(1) > image , .choosetype1 > view:nth-child(3) > image{
  width: 120rpx;
  height: 120rpx;
  margin-top: 51rpx;
}
.choosetype > view:nth-child(3) > image , .choosetype1 > view:nth-child(3) > image{
  position: relative;
  left: 100%;
  transform: translateX(-100%);
}
.choosetype > view:nth-child(1) > view , .choosetype > view:nth-child(3) > view, .choosetype1 > view:nth-child(1) > view , .choosetype1 > view:nth-child(3) > view{
  width: 120rpx;
  text-align: center;
  font-size: 25rpx;
}
.choosetype > view:nth-child(3) > view , .choosetype1 > view:nth-child(3) > view{
  position: relative;
  left: 100%;
  transform: translateX(-100%);
}
.choosetype > view:nth-child(2) , .choosetype1 > view:nth-child(2){
  width: 232rpx;
}
.choosetype > view:nth-child(2) > image, .choosetype1 > view:nth-child(2) > image{
  width:232rpx;
  height: 232rpx;
}
.choosetype > view:nth-child(3), .choosetype1 > view:nth-child(3){
  flex:1;
}