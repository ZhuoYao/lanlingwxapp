/* pages/collectionmenu/collectionmenu.wxss */
page{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
page >image{
  width: 100%;
  height: 100%;
}
.collection{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.collection-top{
  width: 100%;
  height: 600rpx;
  position: relative;
  overflow: hidden;
}
.collection-top > view{
  width: 346rpx;
  height: 346rpx;
  background-color: rgba(255, 255, 255, .2);
  border-radius: 50%;
  margin: 0 auto;
  margin-top: 52rpx;
  overflow: hidden;
}
.collection-top > view > view{
    width: 280rpx;
    height: 280rpx;
    margin: 0 auto;
    margin-top: 33rpx;
    border-radius: 50%;
    background-color: white;
    text-align: center;
    color: #358AFF;
    font-size: 32rpx;
}
.collection-top > view > view >view:first-child{
    font-size: 72rpx;
    padding-top: 70rpx;
}
.collection-bottom{
    width: 100%;
    height: calc(100% - 600rpx);
    background-color: #F5F5F5;
}
.collection-bottom .collection-title{
    width: 100%;
    padding-top: 25rpx;
    height: calc(100% - 123rpx);
    overflow: hidden;
}
.collection-bottom .collection-title >view{
   display: flex;
   width: 100%;
   height: 88rpx;
   background-color: white;
   font-size: 30rpx;
   line-height: 88rpx;
   margin-top: 3rpx;
}
.collection-bottom .collection-title >view > view:first-child{
  width: 610rpx;
  padding-left: 40rpx;
}
.collection-bottom .collection-title >view>image{
  width: 26rpx;
  height: 26rpx;
  margin-top: 33rpx;
  margin-left: 30rpx;
}
.collection-bottom .collection-button{
  width: 100%;
  height: 98rpx;
  background-color: #24C68B;
  font-size: 30rpx;
  color: white;
  text-align: center;
  line-height: 98rpx;
}