/* pages/chooseschool/chooseschool.wxss */
page{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.chooseschool{
  width: 100%;
  height: 100%;
}
.searchtop{
  padding:0rpx 45rpx;
  height: 400rpx;

}
.searchtop .search{
  padding: 14rpx 0 32rpx 0;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
}
.searchtop .search >view:first-child{
  width: 550rpx;
  height: 60rpx;
  background-color: #F2F2F2;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #CCCCCC;
  overflow: hidden;
  display: flex;
}
.searchtop .search >view >image{
   width: 34rpx;
   height: 34rpx;
   margin-top: 14rpx;
   margin-left: 26rpx;
   margin-right: 15rpx;
}
.searchtop .search >view >input{
  line-height: 70rpx;
  height: 60rpx;
  flex: 1;
}
.searchtop .search >view:last-child{
  font-size: 28rpx;
  color: #666666;
  margin-left: 51rpx;
}
.searchtop .searchdown{
   width: 100%;
   height: 290rpx;
   overflow: hidden;
}
.searchtop .searchdown .searchtext{
   font-size: 28rpx;
}
.searchtop .searchdown .searchhot{
    font-size: 28rpx;
    overflow: hidden;
}
.searchtop .searchdown .searchhot >view{
  height: 56rpx;
  border: 2rpx solid #358AFF;
  border-radius: 30rpx;
  padding: 0 52rpx;
  display: block;
  float: left;
  line-height: 60rpx;
  margin-top: 16rpx;
  color: #6A6A6A;
}
.searchtop .searchdown .searchhot >view:nth-child(2){
  margin-left: 30rpx;
}
scroll-view{
  width: 100%;
  height: calc(100% - 400rpx);
}
.schoollist{
  padding: 0 40rpx;
  height: 200rpx;
  display: flex;
  border-bottom: 5rpx solid #F4F4F4;
  overflow: hidden;
}
.schoollist >view:nth-child(1){
    width: 180rpx;
    height: 140rpx;
    margin-top: 38rpx;
}
.schoollist >view:nth-child(1) >image{
  width: 100%;
  height: 100%;
}
.schoollist >view:nth-child(2){
    flex: 1;
    height: 140rpx;
    margin-top: 38rpx;
    padding-left: 20rpx;
}
.schoollist >view:nth-child(2) >view:nth-child(1){
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.schoollist >view:nth-child(2) >view:nth-child(3){
  font-size: 32rpx;
  color: #7C7C7C;
  font-weight: 600;
}
.schoollist >view:nth-child(3){
    width: 100rpx;
    text-align: left;
    overflow: hidden;
    font-size: 28rpx;
    margin-top: 38rpx;
    color: #7C7C7C;
}
.schoollist >view:nth-child(4) >image{
    margin-top:75rpx; 
    width: 50rpx;
}