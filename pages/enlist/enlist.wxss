/* pages/enlist/enlist.wxss */
page{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
page>view:nth-child(2){
  width: 100%;
  height: 100rpx;
  background-color: #358AFF;
  color: white;
  font-size: 30rpx;
  line-height: 100rpx;
  text-align: center;
}
.enlist{
  width: 100%;
  height: calc(100% - 100rpx);
  background-color: rgb(245, 245, 245);
  overflow-y: auto;
}
.enlist .subject-detail{
  width: 650rpx;
  height: 300rpx;
  margin: 0 auto;
  margin-top: 28rpx;
  box-shadow:0px 1px 10px 0px rgba(167,167,167,0.5);
  border-radius:20px;
  background-color: white;
}
.enlist-form{
  width: 650rpx;
  margin: 0 auto;
  border-radius: 20rpx;
  box-shadow:0px 1px 10px 0px rgba(167,167,167,0.5);
  margin-top: 25rpx;
  margin-bottom: 30rpx;
}
.enlist-form > view{
  padding: 23rpx 0 23rpx 32rpx;
  display: flex;
}
.enlist-form > view > view{
  width: 200rpx;
  font-size: 26rpx;
}
.enlist-form > view > view > text{
  color: #CA0505;
  font-size: 26rpx;
}
.enlist-form > view  radio{
  transform: scale(0.7);
}
.enlist-form > view >input{
  flex: 1;
  font-size: 26rpx;
}
.enlist-form > view:nth-child(1){
  padding: 38rpx 0 10rpx 32rpx;
  font-size: 30rpx;
  font-weight: 600;
}
.enlist-form > view:nth-child(9) ,.enlist-form > view:nth-child(10){
  display: none;
}
.showcompany{
  display: flex !important;
}