/* pages/choosecity/choosecity.wxss */
page{
  width: 100%;
  height: 100%;
}
.getsubject{
  width: 100%;
  height: 100%;
}
.getsubject .searchsubject{
  padding: 0rpx 45rpx;
  height: 282rpx;
}
.getsubject .searchsubject .search{
  padding: 14rpx 0 32rpx 0;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
}
.getsubject .searchsubject .search >view:first-child{
  width: 550rpx;
  height: 60rpx;
  background-color: #F2F2F2;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #CCCCCC;
  overflow: hidden;
  display: flex;
}
.getsubject .searchsubject .search >view >image{
   width: 34rpx;
   height: 34rpx;
   margin-top: 14rpx;
   margin-left: 26rpx;
   margin-right: 15rpx;
}
.getsubject .searchsubject .search >view >input{
  line-height: 70rpx;
  height: 60rpx;
  flex: 1;
}
.getsubject .searchsubject .search >view:last-child{
  font-size: 28rpx;
  color: #666666;
  margin-left: 51rpx;
}
.getsubject .searchsubject .search-text >view:first-child{
    font-size: 28rpx;
    color: #666666;
    width: 100%;
    margin-bottom: 30rpx;
}
.getsubject .searchsubject .search-text >view:last-child{
    font-size: 26rpx;
    color: #358AFF;
    height: 70rpx;
    line-height: 70rpx;
    padding: 0 64rpx;
    border: 2rpx solid #358AFF;
    border-radius: 35rpx;
    display: block;
    float: left;
}
.scroll-subject{
  width: 100%;
  height: calc(100% - 282rpx);
  overflow: hidden; 
  display: flex;
}
.scroll-subject > scroll-view{
    width:  700rpx;
    height: 100%;
}
.group-name{
    background-color: #F8F8F8;
    line-height: 60rpx;
    font-size: 26rpx;
    color: #BCBCBC;
    padding-left: 45rpx;
}
.group-subject .subject-name{
    padding-left: 48rpx;
    line-height: 86rpx;
    font-size: 26rpx;
    color: #C9C9C9;
    border-bottom: 2rpx solid #F8F8F8;
    display: flex;
}
.group-subject .subject-name> view:nth-child(1){
    flex: 1;
}
.group-subject .subject-name> view:nth-child(2){
  width: 50rpx;
  height: 40rpx;
  padding-top: 13rpx;
  margin-right: 42rpx;
}
.group-subject .subject-name> view:nth-child(2) >image{
  width: 36rpx;
  height: 40rpx;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.scroll-subject >view{
  flex: 1;
  color: #CCCCCC;
  font-size: 26rpx;
  text-align: center;
}
.scroll-subject >view >scroll-view{
  height: 100%;
}