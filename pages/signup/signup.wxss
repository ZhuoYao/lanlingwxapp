/* pages/ signup/signup.wxss */
page{
  width: 100%;
  min-height: 100%;
}
signup{
  width: 100%;
  height: 1000%;
  overflow: auto;
}
swiper-item .slide-image{
  width: 100%;
  height: 330rpx;
}
.searchbox{
 padding: 0 45rpx;
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  overflow: hidden;
}
.searchbox .searchbox-city{
  width: 110rpx;
  font-size: 30rpx;
  line-height: 88rpx;
  overflow: hidden;
  display: flex;
}
.searchbox .searchbox-city > image{
  width: 30rpx;
  margin-top: 29rpx;
  margin-left: 5rpx;
}
.searchbox .search{
  width: 420rpx;
  height: 60rpx;
  margin-top: 13rpx;
  border-radius: 30rpx;
  background-color: #F4F4F4;
  text-align: center;
  color: #9A9A9A;
  font-size: 26rpx;
  overflow: hidden;
  line-height: 60rpx;
}
.searchbox .search >image{
  width: 31rpx;
  height: 35rpx;
 position: relative;
 top: 9rpx;
}
.searchbox .tips{
  font-size: 30rpx;
  color: #358AFF;
  line-height: 88rpx;
}
.sign-up{
  width: 700rpx;
  height: 200rpx;
  margin: 0 auto;
  margin-top: 23rpx;
  box-shadow:0px 4px 18px 0px rgba(82,117,166,0.5);
  border-radius: 10rpx;
}
.screen{
  width: 100%;
  height: 88rpx;
  display: flex;
  font-size: 28rpx;
  line-height: 88rpx;
}
.screen >view{
  flex: 1;
  text-align: right
}
.screen >image{
  width: 30rpx;
  margin-right: 38rpx;
  margin-left: 30rpx;
  margin-top: 26rpx;
}
.school{
  width: 100%;
  margin-top: 22rpx;
  padding-bottom: 120rpx;
}
.menufix{
  position: fixed;
  top: 0;
  left: 0;
}
.mask{
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
  background-color: rgba(127, 127, 127, .7);
}
.maskshow{
  display: block;
}
.schoollist{
  padding: 0 40rpx;
  height: 200rpx;
  display: flex;
  border-bottom: 5rpx solid #F4F4F4;
  overflow: hidden;
}
.schoollist >view:nth-child(1){
    width: 180rpx;
    height: 140rpx;
    margin-top: 38rpx;
}
.schoollist >view:nth-child(1) >image{
  width: 100%;
  height: 100%;
}
.schoollist >view:nth-child(2){
    flex: 1;
    height: 140rpx;
    margin-top: 38rpx;
    padding-left: 20rpx;
}
.schoollist >view:nth-child(2) >view:nth-child(1){
  font-size: 28rpx;
}
.schoollist >view:nth-child(2) >view:nth-child(3){
  font-size: 32rpx;
  color: #7C7C7C;
  font-weight: 600;
}
.schoollist >view:nth-child(3){
    width: 50rpx;
    overflow: hidden;   
}
.schoollist >view:nth-child(3) >image{
    margin-top:75rpx; 
    width: 50rpx;
}
.moretype{
  width: 100%;
  background-color: white;
}
.moretype .choosetype{
    height: 40rpx;
    display: flex;
    padding: 22rpx 50rpx;
    
}
.moretype .choosetype >view{
    width: calc(20% - 2rpx);
    font-size: 28rpx;
    line-height: 40rpx;
    text-align: center;
    display: flex;
    border-right: 2rpx solid #EEEEEE;
}
.moretype .choosetype >view > view:nth-child(1){
  flex: 1;
}
.moretype .choosetype >view:nth-child(2),.moretype .choosetype >view:nth-child(3),.moretype .choosetype >view:nth-child(4){
  text-align: right;
}
.moretype .choosetype >view:nth-child(5){
  border-right: 0rpx;
  width: 20%;
  overflow: hidden;
  text-align: right;
}
.moretype .choosetype >view:nth-child(5) >image{
  width: 30rpx;
  margin-top: 6rpx;
}
.moretype .choosetype >view .sanjiao{
  width: 30%;
}
.moretype .choosetype >view .sanjiao .sanjiaotop{
  width:0;
    height:0;
    border-width:0 7rpx 7rpx;
    border-style:solid;
    border-color:transparent transparent #D8D8D8;/*透明 透明  灰*/
    margin:8rpx auto;
    position:relative;
}
.moretype .choosetype >view .sanjiao .sanjiaobotoom{
  width:0;
    height:0;
    border-width:7rpx 7rpx 0;
    border-style:solid;
    border-color:#D8D8D8 transparent transparent;/*灰 透明 透明 */
    margin:8rpx auto;
    position:relative;
}
.moretype .kind{
  padding: 0 47rpx;
  height: 176rpx;
  display: none;
}
.moretype .kind >view:first-child{
  font-size: 24rpx;
  padding: 20rpx 0; 
}
.moretype .kind >view:last-child{
  display: flex;
}
.moretype .kind >view:last-child >view{
  font-size: 24rpx;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 25rpx;
  border-radius: 25rpx;
  border: 2rpx solid;
  border-color: #EEEEEE;
  margin-right: 41rpx;
}
.moretype .surebotton{
  margin-top: 6rpx;
  display: flex;
  width: 100%;
  height: 88rpx;
  text-align: center;
}
.moretype .surebotton >view:first-child{
  width: 50%;
  line-height: 88rpx;
  color: #358AFF;
  font-size: 30rpx;
}
.moretype .surebotton >view:last-child{
  width: 50%;
  line-height: 88rpx;
  color: white;
  font-size: 30rpx;
  background-color: #358AFF;
}
.ischoose{
  color: #358AFF;
}
.ischoose1{
  border-color: transparent transparent #358AFF !important;
}
.ischoose2{
  border-color: #358AFF transparent transparent !important;
}
.ischoose3{
  border-color: #358AFF !important;
}
.screenshow{
  display: block !important;
}