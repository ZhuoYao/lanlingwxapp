/* pages/login/login.wxss */
page{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.login{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.login >image{
  margin:  0 auto;
  width: 160rpx;
  display: block;
  margin-top: 51rpx;
  margin-bottom: 130rpx;
}
.login-main .uname , .login-main .password{
    width: 650rpx;
    margin: 0 auto;
    height: 72rpx;
    display: flex;
    font-size: 28rpx;
    border-bottom: 2rpx solid #ECECEC;
}
.uname >input{
  height: 100%;
  width: 100%;
}
.password{
  padding-top: 30rpx !important;
}
.password >input{
    flex: 1;
    height: 100%;
}
.password >button{
  width: 150rpx;
  height: 54rpx;
  border: 1rpx solid #999999;
  text-align: center;
  line-height: 54rpx;
  font-size: 24rpx;
  color: #666666;
  padding: 0rpx;
  background-color: white;
}
.login-button{
  width: 670rpx;
  margin: 0 auto;
  height: 100rpx;
  background-color: #358AFF;
  text-align: center;
  color: white;
  font-size: 28rpx;
  margin-top: 120rpx;
  line-height: 100rpx;
}