/* pages/notice/notice.wxss */
@import "../../wxParse/wxParse.wxss";
page{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.notice{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.notice-nav{
  width: 100%;
  display: flex;
  height: 90rpx;
  font-size: 28rpx;
}
.notice-nav >view{
  width: 25%;
}
.notice-nav >view > view:first-child{
  width: calc(100% - 2rpx);
  border-left: 2rpx solid #F4F4F4;
  text-align: center;
  line-height: 70rpx;
  height: 70rpx;
}

.notice-nav .ischoose{
  width: 100rpx;
  margin: 0 auto;
  height: 2rpx;
  background-color: #358AFF;
  border-radius: 1rpx;
}
.notice-nav .ischoose1{
  font-size: 32rpx;
  color: #358AFF;
}
.notice-main{
  width: 100%;
  height: calc(100% - 90rpx);
  overflow-y: auto;
}
.notice-main .imgbox{
  margin: 0 auto;
  width: 650rpx;
  height: 300rpx;
  background-color: #358AFF;
}
.notice-main .imgbox image{
  width: 100%;
}
.notice-main .title{
  padding:26rpx 0  31rpx 48rpx;
  font-size: 30rpx;
  font-weight: 600;
}
.wxParse-p{
  font-size: 24rpx;
  width: 527rpx;
  margin-left: 101rpx;
}