/* pages/notice/notice.wxss */
page{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.notice{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.notice-nav{
  width: 100%;
  display: flex;
  height: 90rpx;
  font-size: 28rpx;
}
.notice-nav >view{
  width: 25%;
}
.notice-nav >view > view:first-child{
  width: calc(100% - 2rpx);
  border-left: 2rpx solid #F4F4F4;
  text-align: center;
  line-height: 70rpx;
  height: 70rpx;
}

.notice-nav .ischoose{
  width: 100rpx;
  margin: 0 auto;
  height: 2rpx;
  background-color: #358AFF;
  border-radius: 1rpx;
}
.notice-nav .ischoose1{
  font-size: 32rpx;
  color: #358AFF;
}